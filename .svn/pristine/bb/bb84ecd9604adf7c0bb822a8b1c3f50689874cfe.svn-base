<div>
    <h3 class="box-title">System</h3>
    <div class="col-md-6">
        <div class="box box-green">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="system-box-title">
                            HSU
                        </div>
                        <div style="font-size: 18px;">
                        {{system?.hsu?.hsuName}} 
                        {{system?.hsu?.hsuLocation}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box-label">
                            IP Address
                        </div>
                        <div class="info-box-text sm">
                            {{network?.ipParams?.hsuIp}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box-label">
                            Subnet Mask
                        </div>
                        <div class="info-box-text sm">
                            {{network?.ipParams?.hsuSubnetMask}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box-label">
                            Def. Gateway
                        </div>
                        <div class="info-box-text sm">
                            {{network?.ipParams?.hsuDefaultGateway}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box-label">
                            MAC Address
                        </div>
                        <div class="info-box-text sm">
                            {{ system?.macAddress }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-6" *ngIf="system?.hbs?.hbsName">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="system-box-title">
                            HBS
                        </div>
                        <div style="font-size: 18px;" *ngIf='isLinkSynchronized'>
                            {{system?.hbs?.hbsName}} 
                            {{system?.hbs?.hbsLocation}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box-label">
                            IP Address
                        </div>
                        <div class="info-box-text sm" *ngIf='isLinkSynchronized'>
                            {{system?.hbs?.hbsIp | noneValuePipe }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box-label">
                            Subnet Mask
                        </div>
                        <div class="info-box-text sm" *ngIf='isLinkSynchronized'>
                            {{system?.hbs?.hbsSubnetMask | noneValuePipe}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box-label">
                            Def. Gateway
                        </div>
                        <div class="info-box-text sm">
                            N/A
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box-label">
                            MAC Address
                        </div>
                        <div class="info-box-text sm">
                            N/A
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>