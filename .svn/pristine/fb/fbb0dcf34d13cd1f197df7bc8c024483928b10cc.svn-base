.device-monitor-title {
	text-align: center;
	border-right: 1px solid #d8d8d8;
	font-size: 36px;
	padding: 42px;
}

.device-monitor-block {

	&.border-right {
		border-right: 1px solid #d8d8d8;
	}
}

.monitor-caption
{
	padding-left : 10px;
	padding-top : 10px;
	color: #76828e;
	font-size: 14px;
	font-weight: 400;
}

.monitor-caption-data
{
	color: #273238;
	font-size: 18px;
	padding-left : 10px;
	padding-top : 2px;
}

.device-row {
	display:flex;
	padding: 5px;
	min-height: 68px;
	&.border-bottom{
		border-bottom: 1px solid #d8d8d8;
	}
}

.measure {
	margin-left: auto;
}
