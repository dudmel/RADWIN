<div class="col-md-5">
	<div class="box box-green">
		<div class="box-header">
			<h3 class="box-title">{{ title }}</h3>
		</div>
		<div class="box-body">
			<span>
        <span class="btn btn-file">
          BROWSE <input type="file" ng2FileSelect *ngIf="uploader.queue.length==0" [uploader]="uploader" [disabled]="swuBrowseButtonState()" accept="{{fileType}}"/>
        </span>
			<button type="submit" (click)="validateSwu()" class="btn btn-default">VALIDATE</button>
			<button type="submit" (click)="startSwu()" class="btn btn-default" [disabled]="swuStartButtonState()">START</button>
			<!--<button type="submit" (click)="stopMonitor()" class="btn btn-default">Stop Monitor</button>-->
			</span>
			<div>
				<div *ngIf="isValidating"> 
					<br> 
					<i class="icon-spin6 animate-spin"></i>Validating...
				</div>
				<br>Type: {{ swuData?.type }} <br> Release: {{ swuData?.release }} <br> Description: {{ swuData?.description }} <br>
				<div *ngIf="type == 'restore'"> Date: {{ swuData?.date}} </div>
			</div>
			<div *ngIf="swuData?.error">
				<br> Error: {{ swuData.error.message }}
			</div>

			<table class="table">
				<thead>
					<tr>
						<th width="50%">Name</th>
						<th>Size</th>
						<th>Progress</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<tr *ngFor="let item of uploader.queue">
						<td><strong>{{ item?.file?.name }}</strong></td>
						<td nowrap>{{ item?.file?.size/1024/1024 | number:'.2' }} MB</td>
						<td>
							<div class="progress" style="margin-bottom: 0;">
								<div class="progress-bar" role="progressbar" [ngStyle]="{ 'width': item.progress + '%' }"></div>
							</div>
						</td>
						<td class="text-center">
							<span *ngIf="item.isSuccess"><i class="icon-ok"></i></span>
							<span *ngIf="item.isCancel"><i class="icon-block"></i></span>
							<span *ngIf="item.isError"><i class="icon-cancel"></i></span>
						</td>
						<td nowrap>
							<button type="button" class="btn btn-success btn-xs" (click)="item.upload()" [disabled]="item.isReady || item.isUploading || item.isSuccess">
                  Upload
              </button>
							<button type="button" class="btn btn-warning btn-xs" (click)="item.cancel()" [disabled]="!item.isUploading">
                  Cancel
              </button>
							<button type="button" class="btn btn-danger btn-xs" (click)="item.remove()">
                  Remove
              </button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>