/*===== Login / Forgot-Password Css  =====*/
.container{
	max-width:$container;
	width:auto;	
}

.loader{
	position: fixed;
	width: 100%;
	height: 100%;
	background-image: url('../assets/img/loader.gif');
	background-color: #fff;	
	background-repeat: no-repeat;
	background-position: center center;
	z-index: 99;
}

.bg-placeholder {
    background-position: 0 0 !important;
    height: 100%;    
    top: 0;
    width: 100%;
    background-size:cover !important;
    background-repeat:no-repeat;
    @include breakpoint(tablet){
    	background-position: center !important;
    }
	@include breakpoint(mobileonly){
		background-position: center !important;
		// background-size: auto 100% !important;
	} 
}

.fullHeight{
	position: relative;
}

.imageShadow{
	position: relative;
	&:after{
		position:absolute;
		width: 100%;
		height: 100%;
		content: "";
		background: rgba(#000000,0.6);
		z-index: 1;
		top: 0;
		left: 0;
	}
}

.form-container{
	position: absolute;
	top: 50%;
	left: 50%;
	width: 350px;
	max-width: 85%;
	z-index: 2;

	@include juice-prefixer(transform,'translate(-50%,-50%)',webkit moz ms o spec);

	.logo-text{
		margin-bottom: 20px;
	}

	.form{		
		background: #fff; 		
		@include juice-prefixer(border-radius,5px,webkit moz ms o spec);
	}

	.form-text{
		p{
			margin-bottom: 0;
		}
		// margin-bottom:36px;
	}

	.form-content{
		padding: 40px 39px 90px 36px;
	}

	.form-header{
		font-family: $defalut-fonts;
		font-weight: 400;
		color: $default-a-color;
		font-size: 18px;
		background: #f7f7f7;
		text-align: center;
		padding: 15px 5px;
		@include juice-prefixer(border-radius,5px 5px 0 0,webkit moz ms o spec);
	}
	.form-footer{
		padding: 0 0 20px 0;
		text-align: center;
		color: #a1a7ad;		
		@include juice-prefixer(border-radius, 0 0 5px 5px,webkit moz ms o spec);	

		a{
			color: #a1a7ad;
			text-decoration: none;
			text-transform: uppercase;
			@include hoverfocus(#a1a7ad,'none');
		}
	}
	form{
		input[type="email"],
		input[type="text"]{
			margin: 0 0 30px; 
			padding: 10px 73px 10px 10px;
			color: #a1a7ad;
			line-height: 1.1em;
			@include juice-prefixer(border-radius, 2px,webkit moz ms o spec);
		}
		input[type="submit"]{
			width: 97px;
			height: 37px;
			padding: 0;
			margin-top:6px;
			border:none;
			background: $default-a-color;
			color: #fff;
			text-align: center;
			text-transform: uppercase;
			@include juice-prefixer(border-radius, 2px,webkit moz ms o spec);
			float: right;
		}
	}
	.login-form{
		.forgot-pass{
			font-size: 12px;
			color: #a1a7ad;
			display: inline-block;
			float: left;
			margin-top: 18px;
			a{

				color: #a1a7ad;
				text-decoration: none;
				@include hoverfocus(#a1a7ad,'none');
			}
		}
	}
	.forgot-password{
		position: relative;
		input[type="email"],
		input[type="text"]{
			margin:0;
		}
		input[type="submit"]{
			position: absolute;
			top: 0;
			right:0;
			margin: 0;
			border:none;
			background: $default-a-color;
			color: #fff;
			text-align: center;
			text-transform: uppercase;

			width: 63px;
			height: 37px;
			padding: 0;
			@include juice-prefixer(border-radius, 0 2px 2px 0,webkit moz ms o spec);	
		}

	}
	@include breakpoint(mobile){
		margin: 20px auto;
		.form-content{
			padding: 40px 25px 90px 25px;
		}
	}
	@include breakpoint(mobile-land){
		position: inherit;
		left: inherit;
		top: inherit;
		@include juice-prefixer(transform,'translate(0,0)',webkit moz ms o spec);
	}
}

/*===== Login / Forgot-Password Css  =====*/