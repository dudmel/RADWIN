<modal style="top: 15%" #modal data-backdrop="static">
	<modal-header [show-close]="true">
		<h4 class="modal-title">{{ title }}</h4>
	</modal-header>
	<modal-body>
		<div class="modal-body-container">
			<div class="modal-body-content">
				<i [ngClass]="getIconClass()"></i>
				<div #innercomponent></div>
				<p>{{message}}</p>
			</div>
		</div>
	</modal-body>
	<modal-footer>
		<button type="button" *ngIf="okText" class="btn btn-primary" style="width: 80px;" (click)="onOk()">{{ okText }}</button>
		<button type="button" *ngIf="cancelText" class="btn btn-default" data-dismiss="modal" (click)="onDismiss()">{{ cancelText }}</button>
	</modal-footer>
</modal>

