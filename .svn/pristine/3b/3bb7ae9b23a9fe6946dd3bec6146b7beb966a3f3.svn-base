<h3 class="box-title">
	Link Password
</h3>
<div class="row">
	<div class="col-md-8">
		<div class="box box-green">
			<form [formGroup]="linkPasswordForm">
				<fieldset [disabled]="isChangeLinkPasswordDisabled()">
					<div class="box-body">
						<div class="row">
							<div class="col-xs-6 col-sm-3 col-md-3">
								<div class="form-group">
									Current Password
									<input formControlName="currentPassword" class="form-control" type="password" maxlength="16">
									<div class="control-msgs" *ngIf="linkPasswordForm.controls.currentPassword.dirty && !linkPasswordForm.controls.currentPassword.valid">
										<p *ngIf="linkPasswordForm.controls.currentPassword.errors.required">Current Password is required</p>
										<p *ngIf="linkPasswordForm.controls.currentPassword.errors.invalidPassword">Current Password is invalid</p>
									</div>
								</div>
							</div>
							<div formGroupName="matchingPasswords">
								<div class="col-xs-6 col-sm-3 col-md-3">
									<div class="form-group">
										New Password
										<input formControlName="newPassword" class="form-control" type="password" maxlength="16">
										<div class="control-msgs" *ngIf="linkPasswordForm.controls.matchingPasswords.controls.newPassword.dirty && !linkPasswordForm.controls.matchingPasswords.controls.newPassword.valid">
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.controls.newPassword.errors.required">New Password is required</p>
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.controls.newPassword.errors.invalidPassword">New Password is invalid</p>
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.controls.newPassword.errors.minlength">The Link Password value should be at least 8 characters long.</p>
										</div>
									</div>
								</div>
								<div class="col-xs-6 col-sm-3 col-md-3">
									<div class="form-group">
										Confirm Password
										<input formControlName="confirmPassword" class="form-control" type="password" maxlength="16">
										<div class="control-msgs" *ngIf="linkPasswordForm.controls.matchingPasswords.controls.confirmPassword.dirty && !linkPasswordForm.controls.matchingPasswords.controls.confirmPassword.valid">
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.controls.confirmPassword.errors.required">Confirm Password is required</p>
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.controls.confirmPassword.errors.invalidPassword">Confirm Password is invalid</p>
										</div>
										<div class="control-msgs" *ngIf="linkPasswordForm.controls.matchingPasswords.controls.confirmPassword.dirty 
                                    && linkPasswordForm.controls.matchingPasswords.controls.newPassword.dirty &&!linkPasswordForm.controls.matchingPasswords.valid">
											<p *ngIf="linkPasswordForm.controls.matchingPasswords.errors.passwordsMismatch">Confirm Password mismatch</p>
										</div>
									</div>
								</div>
							</div>
							<div class="col-xs-6 col-sm-3 col-md-3">
								<div class="box-buttons">
									<button form="form" type="submit" (click)="save($event)" [disabled]="!linkPasswordForm.valid || linkPasswordForm.pristine"
										class="btn btn-primary">SAVE</button>
									<button form="form" type="cancel" (click)="cancel($event)" class="btn btn-default">CANCEL</button>
								</div>
							</div>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>